<UserControl x:Class="DaisyControl.Client.DaisyConnect.View.Chat.ChatMessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="111.351" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Name="MessageStackPanel"  Orientation="Vertical">
            <Border Name="Border" BorderBrush="#FF000000" BorderThickness="1" CornerRadius="8" Background="Aqua" Padding="7">
                <TextBlock Name="LabelMessage" Padding="5,0,5,0" FontWeight="Bold" FontStyle="Italic" FontSize="14" TextWrapping="Wrap"  />
            </Border>
            <Label Margin="0,-5,10,0" Name="LabelTimeOfMessage" FontSize="8" FontWeight="Bold" Foreground="#FF8F8F8F" HorizontalAlignment="Right">00:00 am</Label>
        </StackPanel>
    </Grid>
</UserControl>
