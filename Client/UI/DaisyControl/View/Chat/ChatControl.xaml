<UserControl x:Class="DaisyControl.Client.DaisyConnect.View.Chat.ChatControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ScrollViewer Name="ChatScrollViewer" Padding="10" VerticalScrollBarVisibility="Visible" MaxHeight="365">
            <ItemsControl Name="MessagesListView" />
        </ScrollViewer>
    </Grid>
</UserControl>
